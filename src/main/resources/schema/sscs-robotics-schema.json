{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "Case",
  "type": "object",

  "properties": {

    "caseCode": {
      "type": "string",
      "pattern" : "\\d{3}"
    },
    "appellantNino": {"type": "string"},
    "caseCreatedDate": {"$ref": "#/definitions/dateType"},
    "mrnDate": {"$ref": "#/definitions/dateType"},
    "mrnReasonForBeingLate": {"type": "string"},
    "appealDate": {"$ref": "#/definitions/dateType"},
    "hearingType": {
      "type": "string",
      "enum": ["Paper", "Oral"]
    },
    "wantsToAttendedHearing": {"$ref": "#/definitions/yesOrNo"},
    "hearingRequestingParty": {"type" : "string"},
    "appellant": {"$ref": "#/definitions/person"},
    "representative": {"$ref": "#/definitions/person"},
    "hearingArrangements": {
      "type": "object",
      "properties" : {
        "languageInterpreter": {"$ref": "#/definitions/yesOrNo"},
        "signLanguageInterpreter": {"$ref": "#/definitions/yesOrNo"},
        "hearingLoop": {"$ref": "#/definitions/yesOrNo"},
        "accessibleHearingRoom": {"$ref": "#/definitions/yesOrNo"},
        "others": {"type" : "string"},
        "datesCantAttend": {
          "type" : "array",
          "items": {
            "$ref": "#/definitions/dateType"
          }
        }

      }
    }

  },

  "definitions": {
    "person": {
      "type": "object",
      "properties": {
        "title" : { "type" : "string"},
        "firstName": { "type": "string" },
        "lastName": { "type": "string"},
        "addressLine1": { "type": "string"},
        "addressLine2": { "type": "string"},
        "townOrCity": { "type": "string"},
        "county": { "type": "string" },
        "postCode": { "type": "string" },
        "phoneNumber": { "type": "string" },
        "email": { "type": "string" }
      },
      "required": ["title", "firstName", "lastName", "addressLine1", "addressLine2","townOrCity", "county", "postCode"]
    },
    "yesOrNo" : {
      "type": "string",
      "enum": ["Yes", "No"]
    },
    "dateType": {
      "type": "string",
      "format" : "date"
    }
  }
}

